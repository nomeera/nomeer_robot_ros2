<?xml version="1.0"?>

<sdf version="1.8">

    <!-- our nomeer_robot model -->
    <model name='nomeer_robot' canonical_link='base_link'>

        <pose>0 0 0 0 0 3.141592654</pose>
        <static>false</static>

        <!-- links-->
        <!-- odom -->
        <!---negativeink name="odom">
            <pose relative_to="__model__">0 0 0 0 0 0</pose>
        </link-->

        <!-- base_link -->
        <link name="base_link">

            <pose relative_to="__model__">0 0 0.35 0 0 0</pose>

            <inertial>
                <mass>8.0</mass>
                <inertia>
                    <ixx>0.426667</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.24</iyy>
                    <iyz>0</iyz>
                    <izz>0.666667</izz>
                </inertia>
            </inertial>

            <visual name='visual'>
                <geometry>
                    <box>
                        <size>0.8 0.6 0.5</size>
                    </box>
                </geometry>
                <material> <!-- blue color -->
                    <ambient>0.0 0.0 1.0 1</ambient>
                    <diffuse>0.0 0.0 1.0 1</diffuse>
                    <specular>0.0 0.0 1.0 1</specular>
                </material>
            </visual>

            <collision name='collision'>
                <geometry>
                    <box>
                        <size>0.8 0.6 0.5</size>
                    </box>
                </geometry>
            </collision>

        </link>

        <!-- body_link-->
        <link name="body_link">

            <pose relative_to="base_link">-0.3125 0 0.75 0 1.5708 0</pose>

            <inertial>
                <mass>2.0</mass>
                <inertia>
                    <ixx>0.166667</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.06</iyy>
                    <iyz>0</iyz>
                    <izz>0.226667</izz>
                </inertia>
            </inertial>

            <visual name='visual'>
                <geometry>
                    <box>
                        <size>1.0 0.6 0.175</size>
                    </box>
                </geometry>
                <material> <!-- blue color -->
                    <ambient>0.0 0.0 1.0 1</ambient>
                    <diffuse>0.0 0.0 1.0 1</diffuse>
                    <specular>0.0 0.0 1.0 1</specular>
                </material>
            </visual>

            <collision name='collision'>
                <geometry>
                    <box>
                        <size>1.0 0.6 0.175</size>
                    </box>
                </geometry>
            </collision>

        </link>

        <!-- right_wheel_link-->
        <link name="right_wheel_link">

            <pose relative_to="base_link">-0.25 0.25 -0.25 1.5707 0 0</pose>

            <inertial>
                <mass>0.4</mass>
                <inertia>
                    <ixx>0.001213</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.001213</iyy>
                    <iyz>0</iyz>
                    <izz>0.002</izz>
                </inertia>
            </inertial>

            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.08</length>
                    </cylinder>
                </geometry>
                <material> <!-- white color -->
                    <ambient>1.0 1.0 1.0 1.0</ambient>
                    <diffuse>1.0 1.0 1.0 1.0</diffuse>
                    <specular>1.0 1.0 1.0 1.0</specular>
                </material>
            </visual>

            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.08</length>
                    </cylinder>
                </geometry>
            </collision>

        </link>

        <!-- left_wheel_link-->
        <link name="left_wheel_link">

            <pose relative_to="base_link">-0.25 -0.25 -0.25 1.5707 0 0</pose>

            <inertial>
                <mass>0.4</mass>
                <inertia>
                    <ixx>0.001213</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.001213</iyy>
                    <iyz>0</iyz>
                    <izz>0.002</izz>
                </inertia>
            </inertial>

            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.08</length>
                    </cylinder>
                </geometry>
                <material> <!-- white color -->
                    <ambient>1.0 1.0 1.0 1.0</ambient>
                    <diffuse>1.0 1.0 1.0 1.0</diffuse>
                    <specular>1.0 1.0 1.0 1.0</specular>
                </material>
            </visual>

            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.08</length>
                    </cylinder>
                </geometry>
            </collision>

        </link>

        <!-- caster_link-->
        <link name="caster_link">

            <pose relative_to="base_link">0.25 0 -0.28 0 0 0</pose>

            <inertial>
                <mass>0.3</mass>
                <inertia>
                    <ixx>0.0012</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.0012</iyy>
                    <iyz>0</iyz>
                    <izz>0.0012</izz>
                </inertia>
            </inertial>

            <visual name='visual'>
                <geometry>
                    <sphere>
                        <radius>0.06</radius>
                    </sphere>
                </geometry>
                <material> <!-- white color -->
                    <ambient>1.0 1.0 1.0 1.0</ambient>
                    <diffuse>1.0 1.0 1.0 1.0</diffuse>
                    <specular>1.0 1.0 1.0 1.0</specular>
                </material>
            </visual>

            <collision name='collision'>
                <geometry>
                    <sphere>
                        <radius>0.06</radius>
                    </sphere>
                </geometry>
            </collision>

        </link>

        <!-- camera_link-->
        <link name="camera_link">

            <pose relative_to="base_link">-0.225 0 1.05 0 0 0</pose>

            <visual name='visual'>
                <geometry>
                    <box>
                        <size>0.05 0.05 0.05</size>
                    </box>
                </geometry>
                <material> <!-- white color -->
                    <ambient>1.0 1.0 1.0 1.0</ambient>
                    <diffuse>1.0 1.0 1.0 1.0</diffuse>
                    <specular>1.0 1.0 1.0 1.0</specular>
                </material>
            </visual>

            <collision name='collision'>
                <geometry>
                    <box>
                        <size>0.05 0.05 0.05</size>
                    </box>
                </geometry>
            </collision>

        </link>

        <!-- lidar_link-->
        <link name="lidar_link">

            <pose relative_to="base_link">0.4 0 -0.05 0 0 0</pose>

            <visual name='visual'>
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.05</length>
                    </cylinder>
                </geometry>
                <material> <!-- white color -->
                    <ambient>1.0 1.0 1.0 1.0</ambient>
                    <diffuse>1.0 1.0 1.0 1.0</diffuse>
                    <specular>1.0 1.0 1.0 1.0</specular>
                </material>
            </visual>

            <collision name='collision'>
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.05</length>
                    </cylinder>
                </geometry>
            </collision>

        </link>

        <!-- sensors -->
        <!-- camera sensor -->
        <sensor name="camera" type="camera">
            <pose relative_to='camera_link'>0 0 0 0 0 0</pose>
            <camera>
                <horizontal_fov>1.047</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>200</far>
                </clip>
            </camera>
            <gz_frame_id>camera_link</gz_frame_id>

            <always_on>1</always_on>
            <update_rate>10</update_rate>
            <visualize>1</visualize>
        </sensor>

        <!-- lidar sensor -->
        <sensor name="lidar" type="gpu_lidar">
            <lidar>
                <scan>
                    <horizontal>
                        <samples>400</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.5707</min_angle>
                        <max_angle>1.5707</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.15</min>
                    <max>25</max>
                    <resolution>0.01</resolution>
                </range>
            </lidar>
            <gz_frame_id>lidar_link</gz_frame_id>
            <alwaysOn>1</alwaysOn>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
        </sensor>


        <!-- joins -->
        <!-- base_joint -->
<!--    <joint name="base_joint" type="fixed">
            <pose relative_to='base_link' />
            <parent>odom</parent>
            <child>base_link</child>
        </joint>
-->
        <!-- body_joint -->
        <joint name="body_joint" type="fixed">
            <pose relative_to='body_link' />
            <parent>base_link</parent>
            <child>body_link</child>
        </joint>

        <!-- right_wheel_joint -->
        <joint name='right_wheel_joint' type='revolute'>
            <pose relative_to='right_wheel_link' />
            <parent>base_link</parent>
            <child>right_wheel_link</child>
            <axis>
                <xyz expressed_in='__model__'>0 1 0</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>    <!--negative
                    infinity-->
                    <upper>1.79769e+308</upper>     <!--positive
                    infinity-->
                </limit>
            </axis>
        </joint>

        <!-- left_wheel_joint -->
        <joint name='left_wheel_joint' type='revolute'>
            <pose relative_to='left_wheel_link' />
            <parent>base_link</parent>
            <child>left_wheel_link</child>
            <axis>
                <xyz expressed_in='__model__'>0 1 0</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>    <!--negative
                    infinity-->
                    <upper>1.79769e+308</upper>     <!--positive
                    infinity-->
                </limit>
            </axis>
        </joint>

        <!-- caster joint -->
        <joint name='caster_joint' type='ball'>
            <parent>base_link</parent>
            <child>caster_link</child>
        </joint>

        <!-- camera_joint -->
        <joint name="camera_joint" type="fixed">
            <pose relative_to='camera_link' />
            <parent>base_link</parent>
            <child>camera_link</child>
        </joint>

        <!-- lidar_joint -->
        <joint name="lidar_joint" type="fixed">
            <pose relative_to='lidar_link' />
            <parent>base_link</parent>
            <child>lidar_link</child>
        </joint>


        <!-- plugins -->
        <!-- diff_drive_plugin -->
        <plugin
            filename="libignition-gazebo-diff-drive-system.so"
            name="ignition::gazebo::systems::DiffDrive">
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <wheel_separation>0.5</wheel_separation>
            <wheel_radius>0.1</wheel_radius>
            <odom_publish_frequency>1</odom_publish_frequency>
            <topic>cmd_vel</topic>
        </plugin>

    </model>

</sdf>